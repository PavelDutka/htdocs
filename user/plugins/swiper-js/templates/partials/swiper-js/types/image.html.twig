{% extends 'partials/swiper-js/types/default.html.twig' %}

{% block slide %}
    <div class="swiper-image-container">
        {{ parent() }}
        {% if slide.text_overlay %}
            {% if slide.title %}
                <h3 class="swiper-image-title-overlay">{{ slide.title|e }}</h3>
            {% endif %}
            {% if slide.text %}
                <div class="swiper-image-text-overlay">{{ slide.text|markdown|raw }}</div>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}
